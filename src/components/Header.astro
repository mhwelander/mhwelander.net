<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
        border-image: linear-gradient(90deg, rgba(56,182,241,1) 0%, rgba(255,129,157,1) 100%) 1;
        border-bottom-width: 7px;
        border-bottom-style: solid;
	}
	h2 {
		margin: 0;
		font-size: 1.4em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}

	h2 a span {
		color: var(--link);
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		min-height: 70px;
	}
	
	nav .kebab {
		display: none;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
	}
	
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links,
		.internal-links {
			/* display: none; */
		}
		.internal-links.show {
			display: block;
		}

		.social-links { 
			display: none;
		}

		nav h2 {
			padding: 1em 0;
		}

		nav {
			display: block;
		}

		nav .narrowNav { 
			display: flex;
			align-items: center;
			justify-content: space-between;
		}

		nav .kebab {
			display: flex;
			padding: 0 1em;
		}

		.internal-links {
			border-top: 1px solid rgb(var(--gray-light));
			padding: 1em 0;
			display: none;
		}

		.internal-links a.active {
			border: 0;
		}

		.internal-links a {
			display: block;
			padding: 0.2em 0.5em;
			border: 0;
		}

	}

	@media (max-width: 360px) {
	}
</style>

<script>
	var y = document.getElementById("kebabLinks");
	var x = document.getElementById("kebabToggle");
	
	if (x) {
	x.addEventListener('click', () => toggleNav() ) }
	
	function toggleNav() {
		if (y) {
		y.classList.toggle("show") }
	}
	
	
	</script>